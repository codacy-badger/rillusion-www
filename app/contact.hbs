    <section class="width-box section--contact-form">
      <div class="left">
        <div class="section--content">
          <h1 class="section--content__title">
            <span data-aos="fade-up" class="section__header-text_kicker">Contact</span>
            <span class="hero--text_title">
              <span data-aos="fade-up" >Let’s work</span>
              <span data-aos="fade-up" >together.</span>
            </span>
          </h1>
          <div data-aos="fade-up" class="section--content__text">
            <p>
              Nothing excites us more than great ideas. We’d love to hear from you.
            </p>
            <p>
              <a href="mailto:interact@rillusion.com">interact@rillusion.com</a><a href="tel:9500007094">+91 9500 007
                094</a></p>
          </div>
        </div>
      </div>
      <div class="right">
        <h1 class="hero--text">
          <span class="section__header-text_kicker">Hire us</span>
        </h1>
        <form id="form" class="form" method="post" autocomplete="off" name="myForm">
          <div class="form-group">
            <label for="" class="sr-only">Name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Name" autocomplete="off"
              required>
          </div>
          <div class="form-group">
            <label for="" class="sr-only">Email</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Email" autocomplete="off"
              required>
          </div>
          <div class="form-group">
            <label for="" class="sr-only">Telephone</label>
            <input type="tel" class="form-group-control" name="phoneNumber" id="phoneNumber" placeholder="Telephone"
              autocomplete="off" required minlength="10" maxlength="10" pattern="^\d{10}$">
          </div>
          <div class="form-group input-inline">
            <label for="">Select your Budget range for this project</label>
            <div class="form-check form-check-inline">
              <input required class="form-check-input" type="radio" name="budgetRange" id="inlineRadio1" value="$ 5,000 - $10,000">
              <label class="form-check-label" for="k5tok10">$ 5,000 - $10,000</label>
            </div>
            <div class="form-check form-check-inline">
              <input required class="form-check-input" type="radio" name="budgetRange" id="inlineRadio2" value="$ 10,000 - $20,000">
              <label class="form-check-label" for="k10tok20">$ 10,000 - $20,000</label>
            </div>
            <div class="form-check form-check-inline">
              <input required class="form-check-input" type="radio" name="budgetRange" id="inlineRadio3" value="$ 20,000 - $50,000">
              <label class="form-check-label" for="k20tok50">$ 20,000 - $50,000</label>
            </div>
            <div class="form-check form-check-inline">
              <input required class="form-check-input" type="radio" name="budgetRange" id="inlineRadio4" value="$ 50,000 - $100,000">
              <label class="form-check-label" for="k50tok100">$ 50,000 - $100,000</label>
            </div>
            <div class="form-check form-check-inline">
              <input required class="form-check-input" type="radio" name="budgetRange" id="inlineRadio5" value="More than $ 100,000">
              <label class="form-check-label" for="morek100">More than $ 100,000</label>
            </div>
            <div class="form-check form-check-inline">
              <input required class="form-check-input" type="radio" name="budgetRange" id="inlineRadio6" value="Can’t Disclose">
              <label class="form-check-label" for="cantdisclose">Can’t Disclose</label>
            </div>
            <div class="errorRadio"></div>
          </div>

          <div class="form-group">
            <label for="" class="sr-only">Project Description</label>
            <textarea name="projectDescription" id="projectDescription" cols="30" rows="10"
              placeholder="Project Description"></textarea>
          </div>
          <button type="submit" class="form-group btn-primary">Get started</button>

        </form>
      </div>
    </section>


