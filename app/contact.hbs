{{#> layouts/base  title="Contact | Rillusion" barbaNamesapce="contact"}}

  {{#*inline "content-block"}}


    <section class="width-box section--contact-form">
      <div class="left">
        <div class="section--content">
          <h1 class="section--content__title">
            <span class="section__header-text_kicker">Contact</span>
            <span class="hero--text_title">
              <span>Let’s work</span>
              <span>together.</span>
            </span>
          </h1>
          <div class="section--content__text">
            <p>
              Nothing excites us more than great ideas. We’d love to hear from you.
            </p>
            <p>
              <a href="mailto:interact@rillusion.com">interact@rillusion.com</a><a href="tel:9500007094">+91 9500 007
                094</a></p>
          </div>
        </div>
      </div>
      <div class="right">
        <h1 class="hero--text">
          <span class="section__header-text_kicker">Hire us</span>
        </h1>
        <form action="">
          <div class="form-group">
            <label for="" class="sr-only">Name</label>
            <input placeholder="Name" class="form-control" type="text">
            <small id="nameHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="" class="sr-only">Email</label>
            <input placeholder="Email" class="form-control" type="email">
            <small id="emailHelp" class=" form-text text-muted">We'll never share your email with anyone
              else.</small>
          </div>
          <div class="form-group">
            <label for="" class="sr-only">Telephone</label>
            <input placeholder="Telephone" class="form-control" type="tel">
            <small id="phoneHelp" class="form-text text-muted">We'll never share your email with anyone
              else.</small>
          </div>
          <div class="form-group input-inline">
            <label for="">Select your Budget range for this project</label>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="5000">
              <label class="form-check-label" for="inlineRadio1">$ 5,000 - $10,000</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="10000">
              <label class="form-check-label" for="inlineRadio2">$ 10,000 - $20,000</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="20000">
              <label class="form-check-label" for="inlineRadio3">$ 20,000 - $50,000</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="50000">
              <label class="form-check-label" for="inlineRadio4">$ 50,000 - $100,000</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="100000">
              <label class="form-check-label" for="inlineRadio5">More than $ 100,000</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio6" value="disclose">
              <label class="form-check-label" for="inlineRadio6">Can’t Disclose</label>
            </div>
          </div>

          <div class="form-group">
            <label for="" class="sr-only">Project Description</label>
            <textarea name="" id="" cols="30" rows="10" placeholder="Project Description"></textarea>
            <small id="textarea" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <button type="submit" class="form-group btn-primary">Get started</button>

        </form>
      </div>
    </section>


  {{/inline}}

  {{/layouts/base}}
