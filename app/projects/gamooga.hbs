      <div class="casestudy-gamooga ">
        <section class="header">
          <div class="container">
            <h1 class="d-none">Gamooga</h1>
            <picture class="logo" data-aos="zoom-in">
              <source srcset="/images/project/gamooga/gamooga-logo.webp" />
              <img src="/images/project/gamooga/gamooga-logo.svg" alt="Gamoogalogo" />
            </picture>
            <picture class=" header-banner">
              <source srcset="/images/project/gamooga/gamooga-banner.webp" />
              <img src="/images/project/gamooga/gamooga-banner.png" alt="gamoogabanner" />
            </picture>
