{{!-- layouts/base.hbs --}}
<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />

    <title>
      {{#if title}}
        {{title}}
      {{else}}
        Rillusion | A creative UI/UX design company bases in chennai
      {{/if}}
    </title>

    <!-- Manifest code for new layout -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="theme-color" content="#ff2300" />
    <meta name="application-name" content="Rillusion" />
    <meta name="apple-mobile-web-app-title" content="Rillusion" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="msapplication-navbutton-color" content="#ff2300" />
    <meta name="msapplication-starturl" content="/" />

    <!-- Place favicon.ico in the root directory -->
    {{#if project}}
      <link rel="manifest" href="../manifest.json" />
      <link rel="icon" href="../images/favicon.png" sizes="32x32" />
      <link rel="apple-touch-icon" href="../images/apple-touch-icon.png" />
    {{else}}
      <link rel="manifest" href="./manifest.json" />
      <link rel="icon" href="./images/favicon.png" sizes="32x32" />
      <link rel="apple-touch-icon" href="./images/apple-touch-icon.png" />
    {{/if}}

    <!-- Facebook Opengraph -->
    <meta property="fb:app_id" content="" />
    <meta property="fb:admins" content="" />
    <meta property="og:url" content="" />
    <meta property="og:site_name" content="Rillusion" />
    <meta property="og:description"
      content="RIllusion &#8211; A creative UI/UX Design Company based in Chennai, India" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="" />
    <meta property="og:site_name" content="Rillusion" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@weareRillusion" />
    <meta name="twitter:creator" content="@weareRillusion" />

    <!-- Noraml Card -->
    <meta itemprop="name" content="Home" />
    <meta itemprop="description" content="RIllusion &#8211; A creative UI/UX Design Company based in Chennai, India" />
    <meta itemprop="image" content="" />

    <!-- Veriification code -->
    <meta name="google-site-verification" content=" " />

    <!-- preload domain -->
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link rel="preconnect" href="https://cdnjs.cloudflare.com/" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet" />

    {{#if project}}
      <link href="../styles/style.css" rel="stylesheet" />
    {{else}}
      <link href="./styles/style.css" rel="stylesheet" />
    {{/if}}


    {{#> head-block}}
      {{!-- Custom <head> content per page could be added --}}
    {{/head-block}}
  </head>

  <body data-barba="wrapper" {{#if project}} class="page-project" {{/if}}>
    <!--[if IE]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <!-- page load -->
    <div class="loading-container">
      <div class="loading-screen"></div>
    </div>

    <!-- cursor -->
    <div id="cursor"></div>

    <!-- menu content -->
    {{> partials/header }}

    <main data-barba="container" data-barba-namespace="{{barbaNamesapce}}">
      <div class="page--{{barbaNamesapce}}">

        <!-- page content -->
        {{#> content-block}}
          {{!-- Content goes here --}}
        {{/content-block}}
        {{#unless hideCallToAction}}

          <!-- footer content -->
          {{> partials/footer }}
        {{/unless}}

      </div>
    </main>

    {{!-- <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-3693359-8"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() { dataLayer.push(arguments); }
      gtag('js', new Date());
      gtag('config', 'UA-3693359-8');
    </script> --}}

    <!-- build:js scripts/vendor.js -->
    <!-- endbuild -->

    <script crossorigin="anonymous"
      src="https://polyfill.io/v3/polyfill.min.js?features=default%2CArray.prototype.find%2CIntersectionObserver"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.2.0/lazysizes.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
      integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script src="https://unpkg.com/@barba/core"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.2.6/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.7/ScrollMagic.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.7/plugins/animation.gsap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vivus/0.4.5/vivus.min.js"></script>
    {{#if project}}
      <script src="../scripts/script.js"></script>
    {{else}}
      <script src="./scripts/script.js"></script>
    {{/if}}

    {{#> scripts-block}}
      {{!-- Custom scripts per page can be added --}}
    {{/scripts-block}}

  </body>

</html>
